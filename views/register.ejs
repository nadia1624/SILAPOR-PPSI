    <script>
      // add loading state to register button on submit
      document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('registerForm');
        const btn = document.getElementById('registerBtn');
        if (!form || !btn) return;

        form.addEventListener('submit', function (e) {
          // let browser handle invalid fields
          if (!form.checkValidity()) return;

          // prevent double submit
          if (btn.disabled) {
            e.preventDefault();
            return;
          }

          // set loading
          btn.disabled = true;
          btn.setAttribute('aria-busy', 'true');
          btn.dataset.original = btn.innerHTML;
          btn.innerHTML = `
            <span class="flex items-center justify-center gap-2">
              <svg class="animate-spin w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
              </svg>
              Memproses...
            </span>`;
        });

        // optional: restore function if needed from client-side (AJAX)
        window.restoreRegisterButton = function () {
          if (!btn) return;
          btn.disabled = false;
          btn.removeAttribute('aria-busy');
          if (btn.dataset.original) btn.innerHTML = btn.dataset.original;
        };
      });
    </script>

    <script>
      // Dark mode functionality
      document.addEventListener("DOMContentLoaded", function () {
        const themeToggle = document.getElementById('theme-toggle');
        const htmlElement = document.documentElement;
        
        // Check for saved theme preference or default to 'light'
        const savedTheme = localStorage.getItem('theme') || 'light';
        htmlElement.classList.toggle('dark', savedTheme === 'dark');
        
        themeToggle.addEventListener('click', function () {
          htmlElement.classList.toggle('dark');
          const currentTheme = htmlElement.classList.contains('dark') ? 'dark' : 'light';
          localStorage.setItem('theme', currentTheme);
        });

        // Password toggle functionality
        const passwordInput = document.getElementById("password");
        const toggleBtn = passwordInput.parentElement.querySelector(
          ".hs-toggle-password"
        );
        const showIcon = toggleBtn.querySelector(".hs-password-toggle-show");
        const hideIcon = toggleBtn.querySelector(".hs-password-toggle-hide");
        
        toggleBtn.addEventListener("click", function () {
          if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIcon.style.display = "none";
            hideIcon.style.display = "inline";
          } else {
            passwordInput.type = "password";
            showIcon.style.display = "inline";
            hideIcon.style.display = "none";
          }
        });
        showIcon.style.display = "inline";
        hideIcon.style.display = "none";

        // Confirm password toggle functionality
        const confirmInput = document.getElementById("confirm_password");
        const confirmToggleBtn = confirmInput.parentElement.querySelector(
          ".hs-toggle-password"
        );
        const confirmShowIcon = confirmToggleBtn.querySelector(
          ".hs-password-toggle-show"
        );
        const confirmHideIcon = confirmToggleBtn.querySelector(
          ".hs-password-toggle-hide"
        );
        confirmToggleBtn.addEventListener("click", function () {
          if (confirmInput.type === "password") {
            confirmInput.type = "text";
            confirmShowIcon.style.display = "none";
            confirmHideIcon.style.display = "inline";
          } else {
            confirmInput.type = "password";
            confirmShowIcon.style.display = "inline";
            confirmHideIcon.style.display = "none";
          }
        });
        confirmShowIcon.style.display = "inline";
        confirmHideIcon.style.display = "none";
      });
    </script>
